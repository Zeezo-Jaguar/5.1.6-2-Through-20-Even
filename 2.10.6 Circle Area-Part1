class Circle {
   
    private double radius;

    
    public Circle(double r) {
        radius = r;
    }

    
    public double getRadius() {
        return radius;
    }

   
    public double getArea() {
       
        return Math.PI * Math.pow(radius, 2);
    }

    
    public double getSphereVolume() {
        
        return 4.0 / 3.0 * Math.PI * Math.pow(radius, 3);
    }
}
