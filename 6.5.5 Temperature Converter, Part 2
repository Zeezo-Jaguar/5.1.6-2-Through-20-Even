#Converting celsius to fahrenheit

def celsius_to_fahrenheit(celsius):
    return celsius * 9/5 + 32

#Converting farenheit to celsius

def fahrenheit_to_celsius(fahrenheit):
    return (fahrenheit - 32) * 5/9

try:
    celsius = float(input("Enter a temperature in Celsius: "))
    print(f"{celsius} degrees Celsius is {celsius_to_fahrenheit(celsius)} degrees Fahrenheit.")
except ValueError:
    print("Error: Please enter a valid number for Celsius!")

try:
    fahrenheit = float(input("Enter a temperature in Fahrenheit: "))
    print(f"{fahrenheit} degrees Fahrenheit is {fahrenheit_to_celsius(fahrenheit)} degrees Celsius.")
except ValueError:
    print("Error: Please enter a valid number for Fahrenheit!"
